# =============================================================================
# DermaGPT Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone API Key - Get from https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# SerpAPI Key (for web search) - Get from https://serpapi.com/
SERPAPI_API_KEY=your_serpapi_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Settings
DATABASE_NAME=dermagpt
DATABASE_USER=dermagpt_user
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Full Database URL (auto-constructed in Docker, manual for local development)
# DATABASE_URL=postgresql+asyncpg://dermagpt_user:your_password@localhost:5432/dermagpt

# =============================================================================
# PINECONE CONFIGURATION
# =============================================================================

# Pinecone Index Name (create this in your Pinecone dashboard)
PINECONE_INDEX_NAME=dermagpt-rag

# Pinecone Environment (check your Pinecone dashboard)
PINECONE_ENVIRONMENT=us-east-1

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI Model for Chat Completion
OPENAI_MODEL=gpt-3.5-turbo

# Embedding Model and Dimensions
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1024

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# JWT Algorithm
JWT_ALGORITHM=HS256

# JWT Token Expiration (in minutes)
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG=false

# API Port
API_PORT=8000

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# =============================================================================
# NGINX CONFIGURATION (FOR PRODUCTION)
# =============================================================================

# Nginx Ports
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# EMBEDDING PROCESSING CONFIGURATION
# =============================================================================

# Batch size for embedding generation
BATCH_SIZE=100

# Text chunking configuration
CHUNK_SIZE=600
CHUNK_OVERLAP=100

# =============================================================================
# EXAMPLE VALUES (FOR REFERENCE)
# =============================================================================

# Example OpenAI API Key format:
# OPENAI_API_KEY=sk-proj-abcd1234567890abcdef1234567890abcdef1234567890

# Example Pinecone API Key format:
# PINECONE_API_KEY=12345678-abcd-1234-efgh-123456789012

# Example SerpAPI Key format:
# SERPAPI_API_KEY=abcd1234567890abcdef1234567890abcdef12

# Example JWT Secret (generate your own):
# JWT_SECRET_KEY=super-secret-jwt-key-with-at-least-32-characters-for-security

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Copy this file: cp env.template .env
# 2. Fill in all the required API keys above
# 3. Modify database credentials if needed
# 4. Generate a secure JWT secret key
# 5. Create Pinecone index with 1024 dimensions
# 6. Run: docker-compose up -d
